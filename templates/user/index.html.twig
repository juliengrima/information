{% extends 'layout.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div id="main">
    <!-- One -->
    <section id="one">
        <header class="major">
            <h2>Liste des administrateurs</h2>
        </header>
    </section>

     <!-- Two -->
     <section id="two">
        <div class="row">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="button-new">
                <a href="{{ path('app_register') }}" class="button">Nouvel administrateur</a>
            </div>
            {% endif %}
            <table id="example" class="table table-striped display">
                <thead>
                    <tr>
                        <th>Nom d'utilisateur</th>
                        <th>Roles</th>
                        <th>IsVerified</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                 {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>
                            {{ user.roles ? user.roles|json_encode : '' }}
                        </td>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td>
                            <ul class="icons">
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <li>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="icon solid fa-pen icon-edit"><span class="label">Editer</span></a>
                                </li>
                                {% endif %}
                            </ul>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table> 
        </div>
     </section>
</div> 
{% endblock %}
